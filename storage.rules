rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User profile images - allow authenticated users to read/write
    match /users/{userId}/{allPaths=**} {
      // Anyone can read profile images
      allow read: if true;
      // Authenticated users can upload (admins upload for guardians)
      allow write: if request.auth != null;
    }

    // Organization logos
    match /organizations/{orgId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
